
menuconfig LUA_COMPONENT_ENABLED
    bool "Enable lua"
    default n

    config LUA_COMPONENT_ELF
        bool "compile lua and luac"
        default n
        depends on LUA_COMPONENT_ENABLED

    config LUA_COMPONENT_DYNAMIC
        bool "compile component as dynamic(shared) lib"
        default n
        depends on LUA_COMPONENT_ENABLED
